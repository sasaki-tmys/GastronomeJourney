{
  "rules": {
    ".read": true,
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "genres": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["category_id"]
    },
    "stores": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["category"]
    }
  }
}
